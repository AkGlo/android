<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="@dimen/preview_image_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/preview_image_width"
            android:layout_height="@dimen/preview_image_height">

            <ImageView
                android:id="@+id/item_thumbnail"
                android:layout_width="@dimen/preview_image_width"
                android:layout_height="@dimen/preview_image_height" />

            <LinearLayout
                android:id="@+id/item_progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent_gray"
                android:layout_alignParentBottom="true"
                android:paddingTop="5dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/item_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="sdhgfdfgsd" android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="5dp"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/item_button_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/preview_button_height"
            android:background="@drawable/magazines_view_button_selector"
            android:text="@string/read"
            android:textColor="@android:color/white"
            android:textSize="@dimen/preview_button_text_size" />

        <Button
            android:id="@+id/item_button_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/preview_button_height"
            android:layout_marginTop="5dp"
            android:background="@drawable/magazines_view_button_selector"
            android:text="@string/download"
            android:textColor="@android:color/white"
            android:textSize="@dimen/preview_button_text_size" />
    </LinearLayout>

</LinearLayout>