<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/downloaded_magasines_item_image"
        android:layout_width="@dimen/preview_image_width"
        android:layout_height="@dimen/preview_image_height"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"/>
    
    <Button
        android:id="@+id/downloaded_magasines_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/downloaded_magazines_delete_button_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    
    <RelativeLayout 
        android:id="@+id/downloaded_magasines_item_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/downloaded_magasines_item_image"
        android:layout_toLeftOf="@id/downloaded_magasines_item_delete_button">

        <TextView
            android:id="@+id/downloaded_magasines_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/downloaded_magasines_item_edition_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:layout_below="@id/downloaded_magasines_item_title"/>

        <TextView
            android:id="@+id/downloaded_magasines_item_download_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:text="@string/downloaded_title"
            android:layout_below="@id/downloaded_magasines_item_edition_date"/>
        
        <TextView
            android:id="@+id/downloaded_magasines_item_download_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:layout_below="@id/downloaded_magasines_item_edition_date"
            android:layout_toRightOf="@id/downloaded_magasines_item_download_date_title"/>
    </RelativeLayout>

</RelativeLayout>