<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <style name="Theme.Billing" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.NoBackground.NoTitle" parent="android:Theme.Holo">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Fullscreen" parent="android:Theme.Holo.NoActionBar.Fullscreen"></style>

    <style name="Theme.Overlay" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>